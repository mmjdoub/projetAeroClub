	END-EXEC.
	
	EXEC SQL
		INCLUDE AVIONS
	END-EXEC.
	
	EXEC SQL BEGIN DECLARE SECTION
	END-EXEC.
		01 WS-AVIONS.
			05 WS-CODAV PIC 9(3).
			05 WS-CODTYP PIC X(2).
			05 WS-CPTHORAV PIC 9(6).
			05 WS-CPTINTER PIC 9(3).
	EXEC SQL END DECLARE SECTION
	END-EXEC.
*************************************  	
	EXEC SQL
